<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/listview_contacts_item_letter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_f3f5f7"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textColor="#333333"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/listview_contacts_item_data_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listview_contacts_item_name"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/listview_contacts_item_phone_num"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/listview_contacts_item_dial_img"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"
            android:src="@drawable/phone_blue_icon"/>

        <ImageView
            android:id="@+id/listview_contacts_item_SMS_img"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/sms_icon"/>

    </LinearLayout>
</LinearLayout>