<LinearLayout
    android:id="@+id/listview_call_records_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/listview_call_records_item_state"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/listview_call_records_item_num"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:textColor="#333333"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/listview_call_records_item_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/listview_call_records_item_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/listview_call_records_item_tel_num"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/listview_call_records_item_call_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/listview_call_records_item_call_icon"/>

    <ImageView
        android:id="@+id/listview_call_records_item_SMS_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:src="@drawable/listview_call_records_item_sms_icon"/>

    <ImageView
        android:id="@+id/listview_call_records_item_set_up_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:src="@drawable/listview_call_records_item_set_up_icon1"/>
</LinearLayout>