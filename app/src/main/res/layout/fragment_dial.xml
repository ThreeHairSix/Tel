<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/fragment_dial_phone_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/background_d9d9d9"
            android:gravity="center"
            android:hint="请输入号码"
            android:textColor="#333333"
            android:textColorHint="#cccccc"
            android:textSize="24sp"/>

        <ImageView
            android:id="@+id/fragment_dial_clear_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/fragment_dial_clear_icon"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_dial_one"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_d9d9d9_2"
                android:gravity="center"
                android:text="1"
                android:textColor="#333333"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/fragment_dial_four"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_d9d9d9_2"
                android:gravity="center"
                android:text="4"
                android:textColor="#333333"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/fragment_dial_seven"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_d9d9d9_2"
                android:gravity="center"
                android:text="7"
                android:textColor="#333333"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/fragment_dial_xing"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_d9d9d9_2"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/color_ff7200"
                android:textSize="30sp"/>

            <LinearLayout
                android:id="@+id/fragment_dial_call_records_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_d9d9d9_2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/fragment_dial_call_records_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="通话记录"
                    android:textColor="@color/color_666666"
                    android:textSize="25sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_dial_two"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_d9d9d9_2"
                android:gravity="center"
                android:text="2"
                android:textColor="#333333"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/fragment_dial_five"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_d9d9d9_2"
                android:gravity="center"
                android:text="5"
                android:textColor="#333333"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/fragment_dial_eight"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_d9d9d9_2"
                android:gravity="center"
                android:text="8"
                android:textColor="#333333"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/fragment_dial_zero"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_d9d9d9_2"
                android:gravity="center"
                android:text="0"
                android:textColor="#333333"
                android:textSize="30sp"/>
            <LinearLayout
                android:id="@+id/fragment_dial_dial_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_1aad19"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/fragment_dial_dial_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="拨号"
                    android:textColor="@color/color_ffffff"
                    android:textSize="25sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_dial_three"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_d9d9d9_2"
                android:gravity="center"
                android:text="3"
                android:textColor="#333333"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/fragment_dial_six"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_d9d9d9_2"
                android:gravity="center"
                android:text="6"
                android:textColor="#333333"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/fragment_dial_nine"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_d9d9d9_2"
                android:gravity="center"
                android:text="9"
                android:textColor="#333333"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/fragment_dial_jing"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_d9d9d9_2"
                android:gravity="center"
                android:text="#"
                android:textColor="@color/color_ff7200"
                android:textSize="30sp"/>
            <LinearLayout
                android:id="@+id/fragment_dial_contacts_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_d9d9d9_2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/fragment_dial_contacts_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="通讯录"
                    android:textColor="@color/color_666666"
                    android:textSize="25sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>