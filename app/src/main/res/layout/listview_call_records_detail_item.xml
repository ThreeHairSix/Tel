<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/listview_call_records_detail_item_state"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/listview_call_records_detail_item_state_txt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999999"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/listview_call_records_detail_item_time"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999999"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/listview_call_records_detail_item_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999999"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/listview_call_records_detail_item_img"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/recording_icon"/>

        <TextView
            android:id="@+id/listview_call_records_detail_item_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textColor="@color/color_ffffff"
            android:textSize="17sp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/listview_call_records_detail_item_del_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/del_icon"/>

</LinearLayout>